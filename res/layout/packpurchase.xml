<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/PackPurchase_Title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:layout_marginTop="-10dp"
        android:gravity="left"
        android:text="@string/packpurchase_title"
        android:textColor="@color/genericBG_trim"
        android:textSize="38dp" />

    <ScrollView
        android:id="@+id/PackPurchase_ScrollView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scrollbars="vertical" android:layout_weight="1" android:layout_marginTop="-10dp">

        <LinearLayout
            android:id="@+id/PackPurchase_Packlist"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="5dp"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/PackPurchase_FreePackHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <View
                    android:id="@+id/PackPurchase_FreePackHeaderBar"
                    android:layout_width="fill_parent"
                    android:layout_height="4dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:background="@color/genericBG_trim" />

                <Button
                    android:id="@+id/PackPurchase_FreePackHelpButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@drawable/button_info" android:layout_alignRight="@id/PackPurchase_FreePackHeaderBar" android:layout_marginRight="5dp"/>

                <TextView
                    android:id="@+id/PackPurchase_FreePackTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/packpurchase_unlockedheader"
                    android:textColor="@color/white"
                    android:textSize="24dp" android:layout_toLeftOf="@id/PackPurchase_FreePackHelpButton" android:layout_marginRight="10dp"/>

            </RelativeLayout>                
                
            <LinearLayout
                android:id="@+id/PackPurchase_FreePackSets"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:longClickable="false"
                android:orientation="vertical" >
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/PackPurchase_PaidPackHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" 
                android:layout_marginTop="10dp">

                <View
                    android:id="@+id/PackPurchase_PaidPackHeaderBar"
                    android:layout_width="fill_parent"
                    android:layout_height="4dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:background="@color/genericBG_trim" />

                <Button
                    android:id="@+id/PackPurchase_PaidPackHelpButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/button_info" android:layout_alignRight="@id/PackPurchase_PaidPackHeaderBar"/>

                <TextView
                    android:id="@+id/PackPurchase_PaidPackTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/packpurchase_lockedheader"
                    android:textColor="@color/white"
                    android:textSize="24dp" android:layout_toLeftOf="@id/PackPurchase_PaidPackHelpButton" android:layout_marginRight="10dp"/>

            </RelativeLayout>            
                
            <LinearLayout
                android:id="@+id/PackPurchase_PaidPackSets"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:longClickable="false"
                android:orientation="vertical" >
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/PackPurchase_Buttons"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/TurnSummary_NextTurn"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:text="@string/packpurchase_button" />
    </LinearLayout>

</LinearLayout>