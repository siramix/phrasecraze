<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/PackPurchase_Title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:layout_marginTop="-10dp"
        android:gravity="left"
        android:text="@string/packpurchase_title"
        android:textColor="@color/genericBG_trim"
        android:textSize="38dp" />

    <ScrollView
        android:id="@+id/PackPurchase_ScrollView"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:scrollbars="vertical" android:layout_weight="1">

        <LinearLayout
            android:id="@+id/PackPurchase_Packlist"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/PackPurchase_UnlockedPackHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <View
                    android:id="@+id/PackPurchase_UnlockedPackHeaderBar"
                    android:layout_width="fill_parent"
                    android:layout_height="4dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:background="@color/genericBG_trim" />

                <Button
                    android:id="@+id/PackPurchase_UnlockedPackHelpButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@drawable/button_info" android:layout_alignRight="@id/PackPurchase_UnlockedPackHeaderBar" android:layout_marginRight="5dp"/>

                <TextView
                    android:id="@+id/PackPurchase_UnlockedPackTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/packpurchase_unlockedheader"
                    android:textColor="@color/white"
                    android:textSize="24dp" android:layout_toLeftOf="@id/PackPurchase_UnlockedPackHelpButton" android:layout_marginRight="10dp"/>

            </RelativeLayout>                
                
            <LinearLayout
                android:id="@+id/PackPurchase_UnlockedPackSets"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:longClickable="false"
                android:orientation="vertical">
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/PackPurchase_PaidPackHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" 
                android:layout_marginTop="10dp">

                <View
                    android:id="@+id/PackPurchase_PaidPackHeaderBar"
                    android:layout_width="fill_parent"
                    android:layout_height="4dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:background="@color/genericBG_trim" />

                <Button
                    android:id="@+id/PackPurchase_PaidPackHelpButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/button_info" android:layout_alignRight="@id/PackPurchase_PaidPackHeaderBar"/>

                <TextView
                    android:id="@+id/PackPurchase_PaidPackTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/packpurchase_lockedheader"
                    android:textColor="@color/white"
                    android:textSize="24dp" android:layout_toLeftOf="@id/PackPurchase_PaidPackHelpButton" android:layout_marginRight="10dp"/>

            </RelativeLayout>            
                
            <LinearLayout
                android:id="@+id/PackPurchase_PaidPackSets"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:longClickable="false"
                android:orientation="vertical">
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
    <View android:id="@+id/view1" android:layout_height="4dp" android:background="@color/genericBG_trim" android:layout_width="fill_parent"></View>
    <LinearLayout android:layout_width="fill_parent" android:id="@+id/LinearLayout1" android:background="@color/genericBG" android:layout_height="90dp">
        <RelativeLayout android:id="@+id/relativeLayout2" android:layout_height="wrap_content" android:layout_width="fill_parent" android:layout_weight="1" android:layout_gravity="center" android:layout_marginLeft="8dp">
            <TextView android:id="@+id/textView1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerHorizontal="true" android:layout_alignParentTop="true" android:text="Selected Packs" android:textSize="20sp"></TextView>
            <LinearLayout android:id="@+id/linearLayout2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_below="@+id/textView1" android:layout_centerHorizontal="true">
                <LinearLayout android:layout_width="wrap_content" android:id="@+id/linearLayout3" android:orientation="vertical" android:layout_height="wrap_content">
                    <FrameLayout android:padding="2dp" android:id="@+id/frameLayout1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:background="@color/black">
                        <View android:layout_width="70dp" android:layout_height="30dp" android:id="@+id/view2" android:background="@color/teamA_primary"></View>
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="center" android:text="3000" android:id="@+id/textView2"></TextView>
                    </FrameLayout>
                    <TextView android:id="@+id/textView3" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="center" android:text="Chosen"></TextView>
                </LinearLayout>
                <LinearLayout android:layout_width="wrap_content" android:id="@+id/linearLayout4" android:layout_height="fill_parent" android:orientation="vertical" android:layout_marginLeft="-2dp">
                    <FrameLayout android:padding="2dp" android:id="@+id/FrameLayout01" android:layout_width="wrap_content" android:layout_height="wrap_content" android:background="@color/black">
                        <View android:layout_width="35dp" android:layout_height="30dp" android:id="@+id/View01" android:background="@color/teamA_secondary"></View>
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="center" android:text="1500" android:id="@+id/TextView02"></TextView>
                    </FrameLayout>
                    <TextView android:id="@+id/textView4" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="center" android:text="Un"></TextView>
                </LinearLayout>
                <LinearLayout android:layout_width="wrap_content" android:id="@+id/linearLayout5" android:layout_height="fill_parent" android:orientation="vertical" android:layout_marginLeft="-2dp">
                    <FrameLayout android:padding="2dp" android:id="@+id/FrameLayout02" android:layout_width="wrap_content" android:layout_height="wrap_content" android:background="@color/black">
                        <View android:layout_width="95dp" android:layout_height="30dp" android:id="@+id/View02" android:background="@color/genericBG_trimDark"></View>
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="center" android:text="4500" android:id="@+id/TextView03"></TextView>
                    </FrameLayout>
                    <TextView android:id="@+id/textView5" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="center" android:text="Locked"></TextView>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
        <LinearLayout android:orientation="vertical" android:layout_height="wrap_content" android:id="@+id/linearLayout1" android:layout_width="wrap_content" android:layout_gravity="center" android:layout_marginRight="8dp">
            <TextView android:textSize="40sp" android:layout_width="wrap_content" android:text="40%" android:layout_height="wrap_content" android:textStyle="bold" android:id="@+id/PackPurchase_Percent" android:layout_gravity="center_horizontal"></TextView>
            <TextView android:textSize="16sp" android:layout_width="wrap_content" android:text="UNLOCKED" android:layout_marginTop="-10dp" android:layout_height="wrap_content" android:textStyle="bold" android:id="@+id/TextView01" android:layout_gravity="center_horizontal"></TextView>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/PackPurchase_Buttons"
        android:layout_width="fill_parent" android:layout_height="wrap_content">

        <com.siramix.phrasecraze.AntonButton
            android:id="@+id/PackPurchase_Button_Next"
            android:layout_width="fill_parent"
            android:text="@string/packpurchase_button" android:textSize="22dp" android:layout_height="50dp" android:soundEffectsEnabled="false"></com.siramix.phrasecraze.AntonButton>
    </LinearLayout>

</LinearLayout>